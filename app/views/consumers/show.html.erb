<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Consumer #<%= @consumer.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Email</dt>
              <dd><%= @consumer.email %></dd>

              <dt>Sex</dt>
              <dd><%= @consumer.sex %></dd>

              <dt>Year of birth</dt>
              <dd><%= @consumer.year_of_birth %></dd>

              <dt>Zip</dt>
              <dd><%= @consumer.zip %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to consumers_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_consumer_url(@consumer.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to consumer_url(@consumer.id), :method => "delete", :data => { :confirm => "Do you really want to delete this consumer?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
